<% provide(:title, "Reset password") %>
<div class="container-fluid py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <fieldset>
          <div class="form-group">
           <%= f.email_field :email, id: :email, class: "form-control input-lg",  placeholder: 'name@domain.com' %>
          </div>
          <%= f.submit "Reset my password!", class: "btn btn-lg btn-primary btn-block" %>
        </fieldset>
      <% end %>
    </div>
  </div>
  </div>
