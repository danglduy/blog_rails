<% provide(:title, @user.name) %>

<div class="col-md-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">
        <%= @user.name %>
        <% if @user.admin? %>
          <span class="badge badge-success">admin</span>
        <% end %>
      </h5>
      <%= render 'follow_form' if logged_in? %>
    </div>
    <ul class="list-group list-group-flush">
      <% if @user.posts.any? %>
        <li class="list-group-item">
          <span class="badge badge-primary">
            <%= @user.posts.count %>
          </span> Posts
        </li>
      <% end %>
      <li class="list-group-item"><%= render 'users/stats' %></li>
    </ul>
  </div>
</div>
<div class="col-md-9">
  <% if @user.posts.any? %>
    <ul class="list-group list-group-flush">
      <%= render @posts %>
    </ul>
    <br>
    <%= will_paginate @posts,
      renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
  <% end %>
</div>
