<!DOCTYPE html>
<html>
  <head>
    <title>
      <%= full_title yield(:title) %>
    </title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>

  <body>
    <div class="container">
      <%= render "layouts/header"%><br>
      <div class="row">
        <% flash.each do |message_type, message| %>
          <% if message_type == "notice"
               message_type = "success"
          elsif message_type == "alert"
            message_type = "danger"
          end %>
          <div class="col-md-12">
            <%= content_tag(
              :div,
              message,
              class: "alert alert-#{message_type}")
            %>
          </div>
        <% end %>
        <%= yield %>
        <%= render "layouts/footer"%>
      </div>
    </div>
  </body>
</html>
