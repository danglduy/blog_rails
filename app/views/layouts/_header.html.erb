<header class="blog-header py-3">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <%= link_to "Write a post", new_post_path,
        class: "btn btn-secondary" %>
      <%= link_to "Newest posts", posts_path,
        class: "btn btn-secondary" %>
    </div>
    <div class="col-4 text-center">
      <%= link_to "Awesome Blog", root_path,
        class: "blog-header-logo text-dark" %>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <% if logged_in? %>
        <%= link_to "Users", users_path, class:"btn btn-primary" %>
        &nbsp;
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle"
                  type="button"
                  id="dropdownMenuButton"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false">Profile</button>
          <div class="dropdown-menu dropdown-menu-right"
            aria-labelledby="dropdownMenuButton">
            <%= link_to "My posts", user_path(current_user),
              class: "dropdown-item"%>
            <%= link_to "Edit", edit_user_path(current_user),
              class: "dropdown-item"%>
            <%= link_to "Logout", logout_path,
              class: "dropdown-item", method: "delete" %>
          </div>
        </div>
      <% else %>
        <%= link_to "Login", login_path,
          class: "btn btn-sm btn-outline-secondary" %>
        &nbsp;
        <%= link_to "Sign up", signup_path,
            class: "btn btn-sm btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
</header>
