<% provide(:title, "Log in") %>
<div class="container-fluid py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= form_for(:session, url: login_path) do |f| %>
        <fieldset>
          <div class="form-group">
           <%= f.email_field :email, id: :email, class: "form-control input-lg",  placeholder: 'name@domain.com' %>
          </div>
          <div class="form-group">
           <%= f.password_field :password, id: :password, class: "form-control input-lg",  placeholder: 'Password' %>
          </div>
          <%= f.label :remember_me, class: "custom-control custom-checkbox my-1 mr-sm-2" do %>
            <%= f.check_box :remember_me, class: "custom-control-input" %>
            <span class="custom-control-label">Remember me </span>
          <% end %>
          <%= f.submit "Log me in!", class: "btn btn-lg btn-primary btn-block" %>
        </fieldset>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        <p>Forget your password? <%= link_to "Reset now", new_password_reset_path %></p>
      <% end %>
    </div>
  </div>
  </div>
